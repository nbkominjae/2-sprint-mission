{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "jest",
      "node"
    ],
  },
  "include": ["src/**/*.ts"], 
  "exclude": ["dist", "node_modules"],
  "ts-node": {
    "esm": true
  }
}
