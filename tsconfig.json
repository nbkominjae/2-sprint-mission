{
  "compilerOptions": {
    "target": "es2020",               // 최소 es2020 이상
    "module": "commonjs",             // ESM-only 패키지 호환
    "moduleResolution": "node",   // 모듈 해석 방식
    "rootDir": "./src",               // 소스 디렉토리
    "outDir": "./dist",               // 컴파일 결과물
    "esModuleInterop": true,          // CommonJS 호환
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2015.promise",
      "es2020" // 또는 "es2022"
    ]
  }
}
